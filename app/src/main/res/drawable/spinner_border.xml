<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for the Spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/spinnerBackgroundColor" /> <!-- Background color of the spinner -->
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed for the desired roundness -->
            <stroke
                android:width="1dp"
                android:color="?attr/spinnerStrokeColor" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
