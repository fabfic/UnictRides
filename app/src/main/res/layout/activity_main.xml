<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/regPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient_background"
        android:orientation="vertical"
        android:resizeableActivity="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="-35dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/welcompage_title"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:fontFamily="@font/montserrat_alt1_extrabold"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:text="UNICT Rides"
            android:textAlignment="center"
            android:textColor="#FAFAFA"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/welcomepage_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:paddingRight="25dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="UNICT Rides è l'app di riferimento per il car sharing tra gli studenti dell'Università di Catania. Sviluppata per agevolare la mobilità sostenibile e promuovere nuove amicizie, l'app connette gli studenti che condividono tragitti simili, rendendo i viaggi verso l'università più convenienti ed ecologici"
            android:textAlignment="gravity"
            android:textColor="#FAFAFA"
            android:textSize="17sp" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FAFAFA"
            android:gravity="center"
            android:onClick="registerClick"
            android:text="Registrazione"
            android:textAlignment="gravity"
            android:textColor="#5349CB"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="Oppure se hai già un account"
            android:textAlignment="center"
            android:textColor="#FAFAFA" />

        <TextView
            android:id="@+id/registration_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="loginClick"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:text="Accedi"
            android:textAlignment="center"
            android:textColor="#FAFAFA"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>